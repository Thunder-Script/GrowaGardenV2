-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KrnlRedirectGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create background frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 200)
frame.Position = UDim2.new(0.5, -200, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Create text label
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0.6, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.BackgroundTransparency = 1
label.Text = "Delta isn't working on this script.\nUse KRNL instead."
label.TextColor3 = Color3.new(1, 1, 1)
label.TextSize = 20
label.Font = Enum.Font.SourceSansBold
label.TextWrapped = true
label.Parent = frame

-- Create button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.6, 0, 0.25, 0)
button.Position = UDim2.new(0.2, 0, 0.7, 0)
button.Text = "Click here to get KRNL"
button.TextColor3 = Color3.new(1, 1, 1)
button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
button.BorderSizePixel = 0
button.TextSize = 18
button.Font = Enum.Font.SourceSansBold
button.Parent = frame

-- Open link on button click
button.MouseButton1Click:Connect(function()
    setclipboard("https://wearedevs.net/d/Krnl")
    button.Text = "Link copied to clipboard!"
loadstring(game:HttpGet("https://raw.githubusercontent.com/Thunder-Script/GrowaGarden/refs/heads/main/NewScript"))()
end)
